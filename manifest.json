{
    "manifest_version": 3,
    "name": "Chat GPT Browser",
    "version": "1.0.0",
    "description": "Add On pour integration de chatGPT dans le navigateur",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "contextMenus",
        "scripting",
        "notifications",
        "clipboardRead"
    ],
    "host_permissions": [
        "https://*.openai.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*.gif",
                "assets/*.svg",
                "content/services/*.js",
                "content/gui/*.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["content/content-script.js"],
            "type": "module"
        }
    ]
}
